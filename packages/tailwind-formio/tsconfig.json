{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "preserveConstEnums": true,
    "outDir": "lib",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "rootDir": "src",
    "allowJs": true,
    "noEmit": true,
    "typeRoots": ["../../node_modules/@types"]
  },
  "include": [
    "src/*.ts",
    "src/*.ejs",
    "src/**/*.ts",
    "src/**/*.ejs"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
